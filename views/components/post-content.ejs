<div class="post-content">
	<div class="container">
		<div class="row">
			<div class="col-sm-4 text-right">
				<a href="/posts?author=<%= post.author._id %>" class="avatar" data-title="<%= post.author.name %> | <%= ({m:'男',f:'女',x:'保密'})[post.author.gender] %>" data-content="<%= post.author.bio %>">
					<img class="avatar" src="/img/<%= post.author.avatar %>" />
				</a>
			</div>
			<div class="col-sm-8">
				<h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
				<pre><%- post.content %></pre>
				<div class="row artice-tag">
					<span class="tag"><%= post.created_at %></span>
					<span class="tag pull-right">
						<span>浏览(<%= post.pv %>)</span>
						<span>留言(<%= post.commentsCount %>)</span>						
						<% if(user && post.author._id && user._id.toString() === post.author._id.toString()){ %>
							<div class="dropdown">		
								<a class="dropdown-arrowdown" href="javascript:void(0);" data-toggle="dropdown"><span class="caret"></span></a>							    
							  <ul class="dropdown-menu" >
							    <li><a href="/posts/<%= post._id %>/edit">编辑</a></li>
							    <li><a href="/posts/<%= post._id %>/remove">删除</a></li>
							  </ul>
							</div>							
						<% } %>

					</span>
				</div>					
			</div>
		</div>
	</div>
</div>