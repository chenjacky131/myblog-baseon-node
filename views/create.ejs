<%- include('header') %>

<div class="container">
	<div class="row">
		<div class="col-sm-4 text-right">
			<a href="/posts?author=<%= user.name %>" class="avatar" data-title="<%= user.name %> | <%= ({m:'男',f:'女',x:'保密'})[user.gender] %>" data-content="<% user.bio %>" >
				<img src="/img/<%= user.avatar %>"  class="avatar" />
			</a>		
		</div>
		<div class="col-sm-8">
			<form method="post" action="/posts">
				<div class="form-group">
					<label>标题</label>
					<input class="form-control" type="text" name="title"/>
				</div>
				<div class="form-group">
					<label>内容</label>
					<textarea name="content"  rows="15" class="form-control"></textarea>
				</div>
				<div class="form-group"><input type="submit" class="btn btn-primary" value="发布" /></div>
			</form>
		</div>
	</div>
</div>

<%- include('footer') %>
