<%- include('header') %>

<div class="container">
	<div class="row">
		<div class="col-sm-4 text-right">
			<a href="/posts?author=<%= user._id %>" class="avatar" data-title="<%= user.name %> | <%= ({m:'男',f:'女',x:'保密'})[user.gender] %>" data-content="<%= user.bio %>">
				<img src="/img/<%= user.avatar %>" alt="" class="avatar" />
			</a>
		</div>
		<div class="col-sm-8">
			<form action="/posts/<%= post._id %>/edit" method="post">
				<div class="form-group">
					<label>标题</label>
					<input type="text" class="form-control" name="title" value="<%= post.title %>" />					
				</div>
				<div class="form-group">
					<label>内容</label>
					<textarea name="content" rows="15" class="form-control"><%= post.content %></textarea>
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="发布" />
				</div>
			</form>
		</div>
	</div>
</div>

<%- include('footer') %>